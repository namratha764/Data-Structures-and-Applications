#include <stdio.h>
#include <stdlib.h>

void heapify(int a[10] , int n)
{
    int i , j , k , v, flag=0;
    for(i=n/2; i >=1 ; i--)
    {
        k=i;
        v=a[k];
        flag=0;
        while(!flag && (2*k)<=n)
        {

            j=2*k;
            if(j<n && a[j],a[j+1])
            {
                j=j+1;
            }
            if(v>=a[j])
            {
                flag=1;
            }
            else
            {
                a[k]=a[j];
                k=j;
            }
        }
        a[k]=v;

    }
}
int main()
{
    int n, i, a[10], ch;
    while (1)
    {
        printf("\n 1.Create heap\n 2.Extract max\n 3.Exit\n Enter your choice: ");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1: printf("\n Read no of elements: ");
                    scanf("%d",&n);
                    {
                        printf("Elements after heapify: ");
                        for(i =1;i<=n;i++)
                       {
                        scanf("%d",&a[i]);
                       }
                    }
                    heapify(a,n);
                    printf("\nElements after heapify:\n");
                    for(i =1;i<=n;i++)
                    {
                        printf("%d\t",a[i]);
                     }
                    break;
            case 2: if(n>=1)
                    {
                        printf("\nElement deleted is %d",a[1]);
                        a[1]=a[n];
                        n=n-1;
                        heapify(a, n);   
                        if(n!=0)
                        {
                           printf("\nHeapify after extraction: ");
                           for(i =1;i<=n;i++)
                           printf("%d\t",a[i]);
                    }
                    else
                        printf("\nNo elements to be deleted");
                    break;
            default:
               exit(0);
        }
    }
    return 0;
}
